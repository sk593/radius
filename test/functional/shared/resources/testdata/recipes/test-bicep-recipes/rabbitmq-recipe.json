{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "languageVersion": "2.1-experimental",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_EXPERIMENTAL_WARNING": "This template uses ARM features that are experimental. Experimental features should be enabled for testing purposes only, as there are no guarantees about the quality or stability of these features. Do not enable these settings for any production usage, or your production environment may be subject to breaking.",
    "_EXPERIMENTAL_FEATURES_ENABLED": [
      "Extensibility"
    ],
    "_generator": {
      "name": "bicep",
      "version": "0.25.53.49325",
      "templateHash": "18395169683802777423"
    }
  },
  "parameters": {
    "context": {
      "type": "object"
    },
    "username": {
      "type": "string",
      "defaultValue": "guest",
      "metadata": {
        "description": "Specifies the RabbitMQ username."
      }
    },
    "password": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies the RabbitMQ password."
      }
    }
  },
  "imports": {
    "kubernetes": {
      "provider": "Kubernetes",
      "version": "1.0.0",
      "config": {
        "namespace": "[parameters('context').runtime.kubernetes.namespace]",
        "kubeConfig": ""
      }
    }
  },
  "resources": {
    "rabbitmq": {
      "import": "kubernetes",
      "type": "apps/Deployment@v1",
      "properties": {
        "metadata": {
          "name": "[format('rabbitmq-{0}', uniqueString(parameters('context').resource.id))]"
        },
        "spec": {
          "selector": {
            "matchLabels": {
              "app": "rabbitmq",
              "resource": "[parameters('context').resource.name]"
            }
          },
          "template": {
            "metadata": {
              "labels": {
                "app": "rabbitmq",
                "resource": "[parameters('context').resource.name]"
              }
            },
            "spec": {
              "containers": [
                {
                  "name": "rabbitmq",
                  "image": "rabbitmq:3.10",
                  "ports": [
                    {
                      "containerPort": 5672
                    }
                  ],
                  "env": [
                    {
                      "name": "RABBIT_USERNAME",
                      "value": "[parameters('username')]"
                    },
                    {
                      "name": "RABBIT_PASSWORD",
                      "value": "[parameters('password')]"
                    }
                  ]
                }
              ]
            }
          }
        }
      }
    },
    "svc": {
      "import": "kubernetes",
      "type": "core/Service@v1",
      "properties": {
        "metadata": {
          "name": "[format('rabbitmq-{0}', uniqueString(parameters('context').resource.id))]"
        },
        "spec": {
          "type": "ClusterIP",
          "selector": {
            "app": "rabbitmq",
            "resource": "[parameters('context').resource.name]"
          },
          "ports": [
            {
              "port": 5672
            }
          ]
        }
      }
    }
  },
  "outputs": {
    "result": {
      "type": "object",
      "value": {
        "resources": [
          "[format('/planes/kubernetes/local/namespaces/{0}/providers/core/Service/{1}', reference('svc').metadata.namespace, reference('svc').metadata.name)]",
          "[format('/planes/kubernetes/local/namespaces/{0}/providers/apps/Deployment/{1}', reference('rabbitmq').metadata.namespace, reference('rabbitmq').metadata.name)]"
        ],
        "values": {
          "queue": "queue",
          "host": "[format('{0}.{1}.svc.cluster.local', reference('svc').metadata.name, reference('svc').metadata.namespace)]",
          "port": 5672,
          "username": "[parameters('username')]"
        },
        "secrets": {
          "password": "[parameters('password')]"
        }
      }
    }
  }
}