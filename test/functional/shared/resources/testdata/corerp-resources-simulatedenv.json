{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "languageVersion": "2.1-experimental",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_EXPERIMENTAL_WARNING": "This template uses ARM features that are experimental. Experimental features should be enabled for testing purposes only, as there are no guarantees about the quality or stability of these features. Do not enable these settings for any production usage, or your production environment may be subject to breaking.",
    "_EXPERIMENTAL_FEATURES_ENABLED": [
      "Extensibility"
    ],
    "_generator": {
      "name": "bicep",
      "version": "0.25.53.49325",
      "templateHash": "12581438366613615907"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "local",
      "metadata": {
        "description": "Specifies the location for resources."
      }
    },
    "port": {
      "type": "int",
      "defaultValue": 3000,
      "metadata": {
        "description": "Specifies the port for the container resource."
      }
    },
    "magpieimage": {
      "type": "string",
      "metadata": {
        "description": "Specifies the image for the container resource."
      }
    }
  },
  "imports": {
    "radius": {
      "provider": "radius",
      "version": "1.0.0"
    }
  },
  "resources": {
    "env": {
      "import": "radius",
      "type": "Applications.Core/environments@2023-10-01-preview",
      "properties": {
        "name": "default",
        "location": "global",
        "properties": {
          "compute": {
            "kind": "kubernetes",
            "resourceId": "self",
            "namespace": "corerp-resources-simulatedenv-env"
          },
          "simulated": true
        }
      }
    },
    "app": {
      "import": "radius",
      "type": "Applications.Core/applications@2023-10-01-preview",
      "properties": {
        "name": "corerp-resources-simulatedenv",
        "location": "[parameters('location')]",
        "properties": {
          "environment": "[reference('env').id]"
        }
      },
      "dependsOn": [
        "env"
      ]
    },
    "gateway": {
      "import": "radius",
      "type": "Applications.Core/gateways@2023-10-01-preview",
      "properties": {
        "name": "http-gtwy-gtwy-simulatedenv",
        "location": "[parameters('location')]",
        "properties": {
          "application": "[reference('app').id]",
          "routes": [
            {
              "path": "/",
              "destination": "[reference('frontendRoute').id]"
            },
            {
              "path": "/backend1",
              "destination": "[reference('backendRoute').id]"
            },
            {
              "path": "/backend2",
              "destination": "[reference('backendRoute').id]",
              "replacePrefix": "/"
            }
          ]
        }
      },
      "dependsOn": [
        "app",
        "backendRoute",
        "frontendRoute"
      ]
    },
    "frontendRoute": {
      "import": "radius",
      "type": "Applications.Core/httpRoutes@2023-10-01-preview",
      "properties": {
        "name": "http-gtwy-front-rte-simulatedenv",
        "location": "[parameters('location')]",
        "properties": {
          "application": "[reference('app').id]",
          "port": 81
        }
      },
      "dependsOn": [
        "app"
      ]
    },
    "frontendContainer": {
      "import": "radius",
      "type": "Applications.Core/containers@2023-10-01-preview",
      "properties": {
        "name": "http-gtwy-front-ctnr-simulatedenv",
        "location": "[parameters('location')]",
        "properties": {
          "application": "[reference('app').id]",
          "container": {
            "image": "[parameters('magpieimage')]",
            "ports": {
              "web": {
                "containerPort": "[parameters('port')]",
                "provides": "[reference('frontendRoute').id]"
              }
            },
            "readinessProbe": {
              "kind": "httpGet",
              "containerPort": "[parameters('port')]",
              "path": "/healthz"
            }
          },
          "connections": {
            "backend": {
              "source": "[reference('backendRoute').id]"
            }
          }
        }
      },
      "dependsOn": [
        "app",
        "backendRoute",
        "frontendRoute"
      ]
    },
    "backendRoute": {
      "import": "radius",
      "type": "Applications.Core/httpRoutes@2023-10-01-preview",
      "properties": {
        "name": "http-gtwy-back-rte-simulatedenv",
        "location": "[parameters('location')]",
        "properties": {
          "application": "[reference('app').id]"
        }
      },
      "dependsOn": [
        "app"
      ]
    },
    "backendContainer": {
      "import": "radius",
      "type": "Applications.Core/containers@2023-10-01-preview",
      "properties": {
        "name": "http-gtwy-back-ctnr-simulatedenv",
        "location": "[parameters('location')]",
        "properties": {
          "application": "[reference('app').id]",
          "container": {
            "image": "[parameters('magpieimage')]",
            "env": {
              "gatewayUrl": "[reference('gateway').properties.url]"
            },
            "ports": {
              "web": {
                "containerPort": "[parameters('port')]",
                "provides": "[reference('backendRoute').id]"
              }
            },
            "readinessProbe": {
              "kind": "httpGet",
              "containerPort": "[parameters('port')]",
              "path": "/healthz"
            }
          }
        }
      },
      "dependsOn": [
        "app",
        "backendRoute",
        "gateway"
      ]
    }
  }
}